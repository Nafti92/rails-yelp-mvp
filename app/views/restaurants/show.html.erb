<h1><%= @restaurant.name %></h1>
<h2>Address: <%=  @restaurant.address%></h2>
<h3>Category: <%= @restaurant.category %></h3>
<%  @restaurant.reviews.each do |re|%>
<li>Review : <%= re.content %><li>
<li>Rating : <%= re.rating %> / 5</li>
<%end%>



<%# <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, placeholder: "Write your review here" %>
  <%= f.input :rating, placeholder: "Add a rating (1-5)" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

